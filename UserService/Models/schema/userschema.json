{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "User",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": ["string", "null"]
    },
    "address1": {
      "type": ["string", "null"]
    },
    "address2": {
      "type": ["string", "null"]
    },
    "postalCode": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9999
    },
    "city": {
      "type": ["string", "null"]
    },
    "emailAddress": {
      "type": ["string", "null"],
      "format": "email"
    },
    "phoneNumber": {
      "type": ["string", "null"]
    }
  },
  "required": ["id", "postalCode"]
}